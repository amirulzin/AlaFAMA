<?xml version="1.0" encoding="utf-8"?><!-- Intended to be used inside an appbar --><!-- Alternative tab layout when height is lower than 420dp (tablayout can be off-scrolled), usually in phone landscape mode -->
<android.support.design.widget.TabLayout android:id="@+id/ca_tablayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:clipToPadding="false"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    app:tabGravity="fill"
    app:tabMode="scrollable" />